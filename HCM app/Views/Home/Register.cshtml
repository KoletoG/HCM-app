@using SharedModels
@model RegisterViewModel
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>
<div class="mb-5  container w-25 align-content-center align-items-center align-self-center justify-content-center text-center">

	<form asp-action="Register" asp-controller="Home" method="post">
		@Html.AntiForgeryToken()
		<div class="mb-3">

			<p class="fw-bolder fs-5 font-monospace">@Html.DisplayNameFor(x => x.FirstName)</p>
			<input asp-for="FirstName" class="form-control" />
			<span asp-validation-for="FirstName" class="text-danger fs-6"></span>
		</div>
		<div class="mb-3">

			<p class="fw-bolder fs-5 font-monospace">
				@Html.DisplayNameFor(x => x.LastName)
			</p>
			<input asp-for="LastName" class="form-control" />
			<span asp-validation-for="LastName" class="text-danger fs-6"></span>
		</div>
		<div class="mb-3">
			<p class="fw-bolder fs-5 font-monospace">
				@Html.DisplayNameFor(x => x.Email)
			</p>
			<input asp-for="Email" class="form-control" />
			<span asp-validation-for="Email" class="text-danger fs-6"></span>
		</div>
		<div class="mb-3">
			<p class="fw-bolder fs-5 font-monospace">
				@Html.DisplayNameFor(x => x.Department)
			</p>
			<input asp-for="Department" class="form-control" />
			<span asp-validation-for="Department" class="text-danger fs-6"></span>
		</div>
		<div class="mb-3">
			<p class="fw-bolder fs-5 font-monospace">
				@Html.DisplayNameFor(x => x.Salary)
			</p>
			<input asp-for="Salary" class="form-control" />
			<span asp-validation-for="Salary" class="text-danger fs-6"></span>
		</div>
		<div class="mb-3">
			<p class="fw-bolder fs-5 font-monospace">
				@Html.DisplayNameFor(x => x.JobTitle)
			</p>
			<input asp-for="JobTitle" class="form-control" />
			<span asp-validation-for="JobTitle" class="text-danger fs-6"></span>
		</div>
		<div class="mb-3 ">
			<p class="fw-bolder fs-5 font-monospace">
				@Html.DisplayNameFor(x => x.Password)
			</p>
			<input asp-for="Password" class="form-control" />
			<span asp-validation-for="Password" class="text-danger fs-6"></span>
		</div>
		<button type="submit" class="btn btn-primary mb-3 font-monospace btn-lg">Register</button>
	</form>
</div>