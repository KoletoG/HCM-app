@using SharedModels
@model UsersToUpdateViewModel

@if (Model.Errors != null)
{
	foreach (string error in Model.Errors)
	{
		<h4 class="text-danger">@error</h4>
	}
}
<div class="mb-5 container w-25 align-content-center align-items-center align-self-center justify-content-center text-center">

	<form asp-action="UpdateUsersManager" asp-controller="Home" asp-route-page="@Model.Page" asp-route-isFirstPage="@Model.IsFirstPage" asp-route-isLastPage="@Model.IsLastPage" method="post">
		@Html.AntiForgeryToken()
		@for (int i = 0; i < Model.Users.Count; i++)
		{
			<div class="mb-3 border-5">
				<input type="hidden" value="@Model.Users[i].Id" name="users[@i].Id" />
				<h5 class="fw-bolder fs-5 font-monospace">First Name: @Model.Users[i].FirstName</h5>
				<input type="text" class="form-control" value="" name="users[@i].FirstName" />
				<h5 class="fw-bolder fs-5 font-monospace">LastName: @Model.Users[i].LastName</h5>
				<input type="text" class="form-control" value="" name="users[@i].LastName" />
				<h5 class="fw-bolder fs-5 font-monospace">Email: @Model.Users[i].Email</h5>
				<input type="text" class="form-control" value="" name="users[@i].Email" />
				<h5 class="fw-bolder fs-5 font-monospace">Salary: @Model.Users[i].Salary</h5>
				<input type="number" class="form-control" value="" name="users[@i].Salary" />
				<h5 class="fw-bolder fs-5 font-monospace">Department: @Model.Users[i].Department</h5>
				<input type="text" class="form-control" value="" name="users[@i].Department" />
				<h5 class="fw-bolder fs-5 font-monospace">Job Title: @Model.Users[i].JobTitle</h5>
				<input type="text" class="form-control" value="" name="users[@i].JobTitle" />
				<h5 class="fw-bolder fs-5 font-monospace">Role: @Model.Users[i].Role</h5>
				<input type="text" class="form-control" value="" name="users[@i].Role" />
				<h5 class="fw-bolder fs-5 font-monospace">Delete user? :</h5>
				<input name="users[@i].ShouldDelete" type="checkbox" class="form-check-input" value="true" />
				<br />
				<br />
			</div>
		}
		<button type="submit">Update users</button>
	</form>
	@if (Model.IsFirstPage)
	{
		<button type="submit" class="btn btn-primary mb-3 font-monospace btn-sm">Next page</button>
	}
	else if (Model.IsLastPage)
	{
		<button type="submit" class="btn btn-primary mb-3 font-monospace btn-sm">Previous page</button>
	}
	else
	{
		<button type="submit" class="btn btn-primary mb-3 font-monospace btn-sm">Next page</button>
		<button type="submit" class="btn btn-primary mb-3 font-monospace btn-sm">Previous page</button>
	}
</div>