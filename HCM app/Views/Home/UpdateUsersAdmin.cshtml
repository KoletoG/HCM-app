@using SharedModels
@model UsersToUpdateViewModel
@if (Model.Errors != null)
{
	foreach (string error in Model.Errors)
	{
		<h4 class="text-danger">@error</h4>
	}
}
<script>
		function showUser(userId)
		{
		let model = document.getElementById(`model[${userId}]`);
		if(model.hidden){
			model.hidden=false;
		}
		else{
			model.hidden=true;
		}
	}
</script>
<div class="mb-5 container w-25 align-content-center align-items-center align-self-center justify-content-center text-center">

	<form method="post" asp-action="UpdateUsersAdmin1" asp-controller="Home" asp-route-page="@Model.Page" asp-route-isFirstPage="@Model.IsFirstPage" asp-route-isLastPage="@Model.IsLastPage">
		@Html.AntiForgeryToken()
		<h6 class="font-monospace">If you want to change user's fields, just type whatever needs to change in the input boxes</h6>
		@for (int i = 0; i < Model.Users.Count; i++)
		{
			<button type="button" id="button[@i]" class=" btn btn-primary mb-3 font-monospace" onclick="showUser(@i)">Show @Model.Users[i].FirstName @Model.Users[i].LastName</button>
			<div hidden id="model[@i]" class="mb-3 border-5">
				<input type="hidden" class="form-control" value="@Model.Users[i].Id" name="users[@i].Id" />
				<h5 class="fw-bolder fs-5 font-monospace">First Name: @Model.Users[i].FirstName</h5>
				<input type="text" placeholder="First name..." value="" class="form-control" name="users[@i].FirstName" />
				<h5 class="fw-bolder fs-5 font-monospace">LastName: @Model.Users[i].LastName</h5>
				<input type="text" value="" placeholder="Last name..." class="form-control" name="users[@i].LastName" />
				<h5 class="fw-bolder fs-5 font-monospace">Email: @Model.Users[i].Email</h5>
				<input type="text" value="" placeholder="Email..." class="form-control" name="users[@i].Email" />
				<h5 class="fw-bolder fs-5 font-monospace">Salary: @Model.Users[i].Salary</h5>
				<input type="number" value="" placeholder="Salary..." class="form-control" name="users[@i].Salary" />
				<h5 class="fw-bolder fs-5 font-monospace">Department: @Model.Users[i].Department</h5>
				<input type="text" value="" placeholder="Department..." class="form-control" name="users[@i].Department" />
				<h5 class="fw-bolder fs-5 font-monospace">Job Title: @Model.Users[i].JobTitle</h5>
				<input type="text" value="" placeholder="Job title..." class="form-control" name="users[@i].JobTitle" />
				<h5 class="fw-bolder fs-5 font-monospace">Role: @Model.Users[i].Role</h5>
				<input type="text" value="" placeholder="Role..." class="form-control" name="users[@i].Role" />
				<h5 class="fw-bolder fs-5 font-monospace">
					Delete user? :
					<input name="users[@i].ShouldDelete" type="checkbox" class="form-check-input" value="true" />
				</h5>
				<br />
				<br />
			</div>
		}
		<button type="submit" class="btn btn-primary mb-3 font-monospace btn-lg">Update users</button>
	</form>
	@if (Model.IsFirstPage)
	{
		int pageNext = Model.Page + 1;
		<a asp-action="UpdateUsersAdmin" class="btn btn-primary" asp-controller="Home" asp-route-page="@pageNext" method="get">
			&raquo; Next page
		</a>
	}
	else if (Model.IsLastPage)
	{
		int pagePrevious = Model.Page - 1;
		<a asp-action="UpdateUsersAdmin" class="btn btn-primary" asp-controller="Home" asp-route-page="@pagePrevious" method="get">
			&laquo; Previous Page
		</a>

	}
	else
	{
		<div class="d-flex justify-content-between my-3">
			@{
				int pagePrevious = Model.Page - 1;
				<a asp-action="UpdateUsersAdmin" class="btn btn-primary" asp-controller="Home" asp-route-page="@pagePrevious" method="get">
					&laquo; Previous Page
				</a>
				int pageNext = Model.Page + 1;
				<a asp-action="UpdateUsersAdmin" class="btn btn-primary" asp-controller="Home" asp-route-page="@pageNext" method="get">
					&raquo; Next page
				</a>
			}
		</div>
	}
</div>